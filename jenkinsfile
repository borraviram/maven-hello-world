pipeline {
    agent any
    stages {
        stage('initialization'){
            steps {
                echo "Hello from initialization step"
            }
        }
        stage('build') {
            steps {
                bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Archiving the wer/jar'
                    archiveArtifacts artifacts : '**/*.war'
                }

            }
        }
    }
}
